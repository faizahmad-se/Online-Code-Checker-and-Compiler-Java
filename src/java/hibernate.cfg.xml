<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
  <session-factory>
    <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
    <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
    <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/codeoj</property>
    <property name="hibernate.connection.username">root</property>
    <property name="hibernate.connection.password">root</property>
    <property name="hibernate.connection.pool_size">700</property>
    <property name="hibernate.show_sql">true</property>
    <property name="hibernate.hbm2ddl.auto">update</property>
    <mapping resource="problems.hbm.xml"/>
    <mapping resource="contestinfo.hbm.xml"/>
    <mapping resource="user.hbm.xml"/>
    <mapping resource="id.hbm.xml"/>
    <mapping resource="q.hbm.xml"/>
    <mapping resource="Submissions.hbm.xml"/>
    <mapping resource="ranking.hbm.xml"/>
    <mapping resource="comment.hbm.xml"/>
    <mapping resource="admin.hbm.xml"/>
  </session-factory>
</hibernate-configuration>
